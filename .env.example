# Supabase Configuration
EXPO_PUBLIC_SUPABASE_URL=your_supabase_project_url
EXPO_PUBLIC_SUPABASE_ANON_KEY=your_supabase_publishable_key

# Supabase Direct Database Connection (for import scripts)
# Get this from: Project Settings → Database → Connection String → Direct connection
DATABASE_URL=postgresql://postgres:YOUR_PASSWORD@db.xxxxx.supabase.co:5432/postgres

# AI Context Generation
# Choose one provider: 'openai', 'anthropic', or 'perplexity'
EXPO_PUBLIC_AI_PROVIDER=anthropic

# OpenAI Configuration (if using OpenAI)
EXPO_PUBLIC_OPENAI_API_KEY=your_openai_api_key_here
EXPO_PUBLIC_OPENAI_MODEL=gpt-4o-mini

# Anthropic Configuration (if using Claude)
EXPO_PUBLIC_ANTHROPIC_API_KEY=your_anthropic_api_key_here
EXPO_PUBLIC_ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# Perplexity Configuration (if using Perplexity)
EXPO_PUBLIC_PERPLEXITY_API_KEY=your_perplexity_api_key_here
EXPO_PUBLIC_PERPLEXITY_MODEL=sonar

# Rate Limiting Configuration
EXPO_PUBLIC_AI_RATE_LIMIT_RPM=50
EXPO_PUBLIC_AI_BATCH_SIZE=10
EXPO_PUBLIC_AI_RETRY_ATTEMPTS=3
EXPO_PUBLIC_AI_RETRY_DELAY_MS=1000

# Error Tracking (Sentry)
# Get your DSN from: https://sentry.io/settings/projects/your-project/keys/
EXPO_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/your-project-id
EXPO_PUBLIC_SENTRY_ENABLED=true

# Analytics (Firebase)
# Download google-services.json and GoogleService-Info.plist from Firebase Console
# and place them in the root directory of your project
# Get them from: Firebase Console → Project Settings → Your apps
EXPO_PUBLIC_FIREBASE_ENABLED=true

# Note: Never commit the actual .env file with real credentials
# Copy this file to .env and fill in your actual values
